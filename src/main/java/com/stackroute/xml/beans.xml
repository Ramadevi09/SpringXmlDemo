<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">
<!--property based injection-->
    <bean id="actor" class="com.stackroute.domain.Actor">
        <constructor-arg  index="0" type="java.lang.String" name="name" value="raja"></constructor-arg>
        <constructor-arg index="1" type="java.lang.String" name="gender" value="male"></constructor-arg>
        <constructor-arg index="2" type="int" name="age" value="26"></constructor-arg>
    </bean>
    <bean id="actor1" class="com.stackroute.domain.Actor">
        <constructor-arg  index="0" type="java.lang.String" name="name" value="ram"></constructor-arg>
        <constructor-arg index="1" type="java.lang.String" name="gender" value="male"></constructor-arg>
        <constructor-arg index="2" type="int" name="age" value="24"></constructor-arg>
    </bean>
    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg  index="0" type="java.lang.String" name="name" value="rama"></constructor-arg>
        <constructor-arg index="1" type="java.lang.String" name="gender" value="female"></constructor-arg>
        <constructor-arg index="2" type="int" name="age" value="21"></constructor-arg>
    </bean>

    <!--property based object injection-->
    <bean id="movie" class="com.stackroute.domain.Moive" scope="prototype">
        <constructor-arg name="actor" ref="actor"></constructor-arg>
    </bean>
    <bean id="movie1" class="com.stackroute.domain.Moive">
        <constructor-arg name="actor" ref="actor1"></constructor-arg>
    </bean>
    <bean name="movie2,movie4" class="com.stackroute.domain.Moive">
        <constructor-arg name="actor" ref="actor2"></constructor-arg>
    </bean>

</beans>